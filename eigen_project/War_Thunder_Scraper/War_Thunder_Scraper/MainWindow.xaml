<Window x:Class="War_Thunder_Scraper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:War_Thunder_Scraper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="startScraping" Content="Fetch" HorizontalAlignment="Left" Margin="145,104,0,0" VerticalAlignment="Top" Width="75" Click="startScraping_Click"/>
        <Button Name="connectPort" Content="Connect port" HorizontalAlignment="Left" Margin="145,24,0,0" VerticalAlignment="Top" Width="75" Click="connectPort_Click" />
        <ListBox Name="availablePorts" SelectedIndex="1" HorizontalAlignment="Left" Height="100" Margin="259,24,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Name="disconnectPort" Content="Disconnect" HorizontalAlignment="Left" Margin="145,60,0,0" VerticalAlignment="Top" Width="75" Click="disconnectPort_Click"/>

    </Grid>
</Window>
